{
    "name": "apipedia/php-sdk",
    "description": "PHP SDK for Apipedia API - WhatsApp, Telegram, SMS, AI Chat and more",
    "type": "library",
    "keywords": [
        "whatsapp",
        "telegram",
        "sms",
        "api",
        "notification",
        "messaging",
        "apipedia",
        "ai",
        "chat"
    ],
    "homepage": "https://github.com/Cloud-Dark/apipedia_php",
    "license": "MIT",
    "authors": [
        {
            "name": "Apipedia Team",
            "email": "support@apipedia.id"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Apipedia\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Apipedia\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpcs-fix": "phpcbf src tests --standard=PSR12",
        "phpstan": "phpstan analyse src --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}